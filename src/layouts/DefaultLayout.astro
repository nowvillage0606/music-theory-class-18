---
const { title = "音楽理論勉強会", description = "" } = Astro.props;
---
<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>
  <body class="bg-white text-slate-800">
    <header class="border-b">
      <div class="mx-auto max-w-3xl px-4 py-4">
        <h1 class="text-lg font-semibold">音楽理論勉強会</h1>
      </div>
    </header>
    <main class="mx-auto max-w-3xl px-4 py-8 prose prose-slate">
      <slot />
    </main>
    <footer class="border-t mt-12">
      <div class="mx-auto max-w-3xl px-4 py-6 text-sm text-slate-500">
        © {new Date().getFullYear()} Music Planz
      </div>
    </footer>
  </body>
</html>