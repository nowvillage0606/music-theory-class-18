---
import "../../styles/tailwind.css";
import MiniBar from "../../components/MiniBar.astro";

const page = {
  title: "Arrangement Techniques",
  subtitle: "Lesson 21",
  lead: "Simple changes, Maximum impact.",
  date: "2025.12.05"
};

// 外部フォント
const fontUrl = "https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500&family=Playfair+Display:ital,wght@0,400;0,600;1,400&display=swap";

// 画像URL
const images = {
  hero: "https://images.unsplash.com/photo-1598488035139-bdbb2231ce04?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80",
  // 1. Quantity: スタジオ全景
  studio: "https://images.unsplash.com/photo-1598653222000-6b7b7a552625?ixlib=rb-4.0.3&auto=format&fit=crop&w=1000&q=80",
  // 2. Rhythm: ドラムセット
  drums: "https://images.unsplash.com/photo-1519892300165-cb5542fb47c7?ixlib=rb-4.0.3&auto=format&fit=crop&w=1000&q=80",
  // 3. Timbre: シンセサイザー（色鮮やか）
  synth: "https://images.unsplash.com/photo-1550291652-6ea9114a47b1?ixlib=rb-4.0.3&auto=format&fit=crop&w=1000&q=80",
  // 4. Depth: スピーカー/奥行き（変更しました）
  depth: "https://images.unsplash.com/photo-1516280440614-6697288d5d38?ixlib=rb-4.0.3&auto=format&fit=crop&w=1000&q=80",
};
---

<html lang="ja" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{page.title} | {page.subtitle}</title>
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href={fontUrl} rel="stylesheet">
    
    <style>
      body {
        font-family: 'Inter', sans-serif;
        background-color: #050505;
        color: #e5e5e5;
      }
      h1, h2, h3, .serif {
        font-family: 'Playfair Display', serif;
      }
      .bg-noise {
        background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.65' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)' opacity='0.05'/%3E%3C/svg%3E");
      }
    </style>
  </head>
  
  <body class="antialiased selection:bg-emerald-500 selection:text-white">
    
    <!-- Nav -->
    <nav class="fixed top-0 left-0 right-0 z-50 flex justify-between items-center px-6 py-6 mix-blend-difference text-white">
      <span class="text-xs font-bold tracking-[0.2em] uppercase">{page.subtitle}</span>
      <a href="/music-theory-class-18/lessons/lesson21.html" class="text-[10px] uppercase tracking-widest border border-white/30 px-4 py-2 rounded-full hover:bg-white hover:text-black transition-all duration-300">
        Full Note
      </a>
    </nav>

    <main>
      <!-- Hero -->
      <section class="relative h-[90vh] w-full flex flex-col justify-center items-center overflow-hidden">
        <div class="absolute inset-0 z-0">
          <img src={images.hero} alt="Studio" class="w-full h-full object-cover opacity-50 grayscale-[20%]" />
          <div class="absolute inset-0 bg-gradient-to-b from-transparent via-[#050505]/50 to-[#050505]"></div>
          <div class="absolute inset-0 bg-noise pointer-events-none"></div>
        </div>

        <div class="relative z-10 text-center px-6 mt-10">
          <p class="text-emerald-400 tracking-[0.3em] text-xs font-bold uppercase mb-6">Music Theory Class</p>
          <h1 class="text-6xl md:text-9xl font-medium tracking-tight leading-[0.9] mb-8 mix-blend-overlay opacity-90">
            ARRANGE<br/><i class="font-thin">MENT</i>
          </h1>
          <p class="max-w-md mx-auto text-sm md:text-base text-gray-300 font-light leading-relaxed">
            {page.lead}
          </p>
        </div>
        
        <!-- Arrow -->
        <div class="absolute bottom-12 animate-bounce opacity-50">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round">
            <line x1="12" y1="5" x2="12" y2="19"></line>
            <polyline points="19 12 12 19 5 12"></polyline>
          </svg>
        </div>
      </section>

      <!-- Intro -->
      <section class="py-20 px-6 md:px-12 max-w-7xl mx-auto">
        <div class="border-l-2 border-emerald-500/50 pl-6 md:pl-12 py-2">
          <h2 class="text-2xl md:text-5xl leading-tight mb-6">
            Don't add.<br/>
            <span class="italic text-emerald-500">Just shift.</span>
          </h2>
          <!-- 改行位置を調整 -->
          <p class="text-gray-400 text-sm md:text-lg max-w-2xl leading-relaxed">
            「セクションが変わったらガラッと変えなきゃ」「音を足さなきゃ」<br class="hidden md:inline" />
            その思い込みを捨てましょう。<br class="hidden md:inline" />
            音の隙間は「空間」や「リズム」でも埋められます。
          </p>
        </div>
      </section>

      <!-- 4 Methods (Bento Grid) -->
      <section class="py-12 px-4 md:px-8 max-w-screen-2xl mx-auto">
        <div class="flex items-end justify-between mb-8 px-2">
            <h2 class="text-[10px] font-bold uppercase tracking-widest text-gray-500">01 — Methods</h2>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 md:grid-rows-2 gap-4">
          
          <!-- 1. Quantity (Part Counting) -->
          <div class="group relative md:col-span-2 md:row-span-1 bg-zinc-900 rounded-sm overflow-hidden min-h-[320px] md:min-h-[auto]">
            <img src={images.studio} class="absolute inset-0 w-full h-full object-cover opacity-40 transition-transform duration-700 group-hover:scale-105" />
            <div class="absolute inset-0 bg-gradient-to-t from-black via-black/60 to-transparent"></div>
            
            <div class="relative h-full flex flex-col justify-between p-6 md:p-8">
                <!-- 上部: タイトル -->
                <div>
                    <div class="text-emerald-400 text-[10px] font-bold uppercase tracking-widest mb-2">01. Quantity</div>
                    <h3 class="text-3xl md:text-4xl mb-2">Part Counting</h3>
                    <p class="text-gray-400 text-xs md:text-sm max-w-md leading-relaxed">
                       サビを作ってから「引く」のが王道。<br class="hidden md:block"/>
                       パート数の増減だけでコントラストを作る。
                    </p>
                </div>
                <!-- 下部: 共通UI (Diff 1, Eff 4) -->
                <div class="border-t border-white/10 pt-4 mt-auto">
                     <div class="flex justify-between items-center">
                        <span class="text-[10px] text-gray-500 uppercase tracking-wider">Difficulty</span>
                        <span class="text-[10px] text-gray-500 uppercase tracking-wider">Effect</span>
                     </div>
                     <div class="flex justify-between items-center mt-1">
                        <MiniBar val={1} />
                        <MiniBar val={4} />
                     </div>
                </div>
            </div>
          </div>

          <!-- 2. Rhythm -->
          <div class="group relative md:col-span-1 md:row-span-2 bg-zinc-900 rounded-sm overflow-hidden min-h-[400px]">
             <img src={images.drums} class="absolute inset-0 w-full h-full object-cover opacity-30 transition-transform duration-700 group-hover:scale-105" />
             <div class="absolute inset-0 bg-black/50"></div>
             
             <div class="relative h-full flex flex-col justify-between p-6 md:p-8">
                <div>
                    <div class="text-amber-400 text-[10px] font-bold uppercase tracking-widest mb-2">02. Groove</div>
                    <h3 class="text-3xl mb-4">Rhythm</h3>
                    <p class="text-gray-400 text-sm leading-relaxed">
                        ハーフタイム、シンコペーション。<br/>
                        ピアノロール上で「隙間」を視覚的にデザインする。
                    </p>
                </div>
                <!-- 共通UI (Diff 2, Eff 4) -->
                <div class="border-t border-white/10 pt-4 mt-4">
                     <div class="flex justify-between items-center">
                        <span class="text-[10px] text-gray-500 uppercase tracking-wider">Difficulty</span>
                        <span class="text-[10px] text-gray-500 uppercase tracking-wider">Effect</span>
                     </div>
                     <div class="flex justify-between items-center mt-1">
                        <MiniBar val={2} />
                        <MiniBar val={4} />
                     </div>
                </div>
             </div>
          </div>

          <!-- 3. Timbre -->
          <div class="group relative bg-zinc-900 rounded-sm overflow-hidden min-h-[320px]">
             <img src={images.synth} class="absolute inset-0 w-full h-full object-cover opacity-30 transition-transform duration-700 group-hover:scale-105" />
             <div class="absolute inset-0 bg-gradient-to-t from-black via-black/40 to-transparent"></div>
             
             <div class="relative p-6 md:p-8 h-full flex flex-col justify-between">
                <div>
                    <div class="text-pink-400 text-[10px] font-bold uppercase tracking-widest mb-2">03. Color</div>
                    <h3 class="text-2xl mb-1">Timbre</h3>
                    <p class="text-gray-400 text-xs mt-2">楽器を変えるだけで、同じフレーズが別物に。</p>
                </div>
                <!-- 共通UI (Diff 3, Eff 3) -->
                <div class="border-t border-white/10 pt-4 mt-auto">
                     <div class="flex justify-between items-center">
                        <span class="text-[10px] text-gray-500 uppercase tracking-wider">Difficulty</span>
                        <span class="text-[10px] text-gray-500 uppercase tracking-wider">Effect</span>
                     </div>
                     <div class="flex justify-between items-center mt-1">
                        <MiniBar val={3} />
                        <MiniBar val={3} />
                     </div>
                </div>
             </div>
          </div>

          <!-- 4. Depth (Space) -->
          <div class="group relative bg-zinc-900 rounded-sm overflow-hidden min-h-[320px]">
             <!-- 画像を修正 -->
             <img src={images.depth} class="absolute inset-0 w-full h-full object-cover opacity-40 transition-transform duration-700 group-hover:scale-105" />
             <div class="absolute inset-0 bg-gradient-to-t from-black via-black/40 to-transparent"></div>
             
             <div class="relative p-6 md:p-8 h-full flex flex-col justify-between">
                <div>
                    <div class="text-indigo-400 text-[10px] font-bold uppercase tracking-widest mb-2">04. Depth</div>
                    <h3 class="text-2xl mb-1">Space & FX</h3>
                    <p class="text-gray-400 text-xs mt-2">Pan, Reverb操作。プロっぽさの鍵。</p>
                </div>
                <!-- 共通UI (Diff 5, Eff 4) -->
                <div class="border-t border-white/10 pt-4 mt-auto">
                     <div class="flex justify-between items-center">
                        <span class="text-[10px] text-gray-500 uppercase tracking-wider">Difficulty</span>
                        <span class="text-[10px] text-gray-500 uppercase tracking-wider">Effect</span>
                     </div>
                     <div class="flex justify-between items-center mt-1">
                        <MiniBar val={5} />
                        <MiniBar val={4} />
                     </div>
                </div>
             </div>
          </div>

        </div>
      </section>

      <!-- Action List -->
      <section class="py-24 bg-[#0a0a0a]">
        <div class="max-w-4xl mx-auto px-6">
          <h2 class="text-4xl md:text-6xl font-serif mb-12">
            Quick Recipes.
          </h2>
          
          <div class="space-y-0">
            {[
              { id: "01", title: "Add Shaker/Perc to Chorus", desc: "サビでシェイカーを1本だけ足す" },
              { id: "02", title: "Drop the Bass", desc: "AメロでBass/Drumを抜く" },
              { id: "03", title: "Half-time Feel", desc: "1セクションだけハーフにする" },
              { id: "04", title: "Silence is Golden", desc: "キメ直前に1拍の休符を作る" },
            ].map((item) => (
              <div class="group flex flex-col md:flex-row md:items-baseline border-b border-white/10 py-6 transition-all hover:pl-4">
                <span class="text-[10px] font-bold text-emerald-500 w-12 mb-2 md:mb-0">/{item.id}</span>
                <h3 class="text-xl md:text-2xl font-medium md:w-1/2 group-hover:text-emerald-400 transition-colors">{item.title}</h3>
                <p class="text-gray-500 text-xs md:w-1/3 mt-1 md:mt-0">{item.desc}</p>
              </div>
            ))}
          </div>

          <div class="mt-16 text-center">
            <a href="/music-theory-class-18/lessons/lesson21.html" class="inline-block border border-white/20 px-8 py-3 rounded-full text-[10px] uppercase tracking-widest hover:bg-white hover:text-black transition-colors">
              View Detailed Notes
            </a>
          </div>
        </div>
      </section>

      <!-- Footer -->
      <footer class="py-12 text-center text-[10px] text-gray-600 uppercase tracking-widest">
        <p>&copy; 2025 NoViLholic Music Theory Class</p>
      </footer>

    </main>
  </body>
</html>
