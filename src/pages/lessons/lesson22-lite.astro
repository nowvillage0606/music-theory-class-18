---
import "../../styles/tailwind.css";
import ThreeScene from "../../components/lesson22/ThreeScene.jsx";

const page = {
  title: "Lesson 22: Thinking Agency",
};

const fontUrl = "https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500&family=Playfair+Display:ital,wght@0,400;0,600;1,400&display=swap";
---

<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{page.title}</title>
    <link href={fontUrl} rel="stylesheet">
    <style>
       body { margin: 0; background: #000; }
    </style>
  </head>
  
  <body class="antialiased">
    
    <!-- 3D Canvas -->
    <ThreeScene client:only="react" />

    <!-- 
      Scroll Spacer 
      pointer-events-none: これが最重要。クリックを透過させる。
    -->
    <div class="relative z-10 w-full pointer-events-none" style="height: 8000px;">
        
        <div class="fixed bottom-8 left-0 right-0 text-center mix-blend-difference text-white">
           <span class="text-[10px] uppercase tracking-widest animate-pulse">
             Scroll to Explore
           </span>
        </div>
        
        <!-- ナビゲーション（ここだけクリック有効にするため pointer-events-auto） -->
        <nav class="fixed top-6 right-6 z-50 pointer-events-auto">
             <a href="/music-theory-class-18/lessons/lesson22.html" class="bg-white/10 backdrop-blur border border-white/20 text-white text-[10px] uppercase tracking-widest px-4 py-2 rounded-full hover:bg-white hover:text-black transition-colors">
            Text Version
          </a>
        </nav>
    </div>

  </body>
</html>
