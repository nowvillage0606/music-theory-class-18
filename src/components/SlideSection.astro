---
const {
  id = '',
  eyebrow = '',
  title = '',
  lead = '',
  icon = '',
  tone = 'slate',
} = Astro.props;

const tones = {
  slate:   'bg-slate-50 border-slate-200',
  blue:    'bg-blue-50 border-blue-200',
  emerald: 'bg-emerald-50 border-emerald-200',
  amber:   'bg-amber-50 border-amber-200',
  rose:    'bg-rose-50 border-rose-200',
};
---
<section id={id} class="scroll-mt-24 py-16 border-b">
  <div class="mx-auto max-w-5xl px-4">
    {eyebrow && (
      <p class="text-xs uppercase tracking-wider text-slate-500">{eyebrow}</p>
    )}
    <div class="mt-2 inline-flex items-center gap-2">
      {icon && <span class="ms" style="font-size:1.4em">{icon}</span>}
      {title && <h2 class="text-2xl md:text-3xl font-extrabold leading-tight">{title}</h2>}
    </div>
    {lead && <p class="mt-3 text-slate-600 max-w-3xl">{lead}</p>}

    {/* ▼ ここを黒固定に */}
    <div class={`mt-6 rounded-2xl border p-6 ${tones[tone]} slot-text text-black`}>
      <slot />
    </div>
  </div>
</section>

<style>
  /* このコンポーネント内だけに作用（Astroのスコープ付き） */
  .slot-text,
  .slot-text :is(p, li, span, div, strong, em, small, code, blockquote, h3, h4, a) {
    color: #000;
  }
  /* 子コンポーネント側で text-slate-* や text-white が付いていても黒に上書き */
  .slot-text :is(.text-white, .text-slate-50, .text-slate-100, .text-slate-200, .text-slate-300) {
    color: #000 !important;
  }
  /* リンクの視認性（必要なら外してOK） */
  .slot-text a { text-decoration: underline; }
</style>