---
const { id = "", eyebrow = "", title = "", lead = "" } = Astro.props;
---
<section id={id} class="scroll-mt-24 py-14 border-b">
  <div class="mx-auto max-w-5xl px-4">
    {eyebrow && <p class="text-xs uppercase tracking-wider text-slate-500">{eyebrow}</p>}
    {title && <h2 class="mt-2 text-2xl md:text-3xl font-bold leading-tight">{title}</h2>}
    {lead && <p class="mt-3 text-slate-600 max-w-3xl">{lead}</p>}
    <div class="mt-6">
      <slot />
    </div>
  </div>
</section>